import os, sys

# cc -S outputs asm
# -static

MAIN_FNAME = "main.c"
SRC_PATH   = "lib/src"

COMPILE_FLAGS = "-static -masm=intel -nostdlib"

CMD = f"cc {COMPILE_FLAGS} {MAIN_FNAME} {SRC_PATH}/*"
print(CMD)

if len(sys.argv) > 1:
	if sys.argv[1] == "debug":
		os.system(f"{CMD} -S")
		exit(0)
	else:
		print("huh")
		exit(-43)
else:
	if os.system(f"{CMD} -o outp") == 0:
		# run prog
		print("starting program:\n")
		print("----------------")
		x = os.system("./outp")
		print()
		print("----------------")
		print("\nfinished running\nexited with code " + str(x))
		exit(x)